<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="156dp"
            android:layout_height="89dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/successful" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Signup Successful"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Welcome among us!"
            android:textColor="@color/colorLogoPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/signInResultButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@color/colorLogoPrimary"
            android:text="SignIn"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>